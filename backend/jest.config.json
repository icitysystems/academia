{
	"moduleFileExtensions": ["js", "json", "ts"],
	"rootDir": ".",
	"roots": ["<rootDir>/src", "<rootDir>/test"],
	"testRegex": ".*\\.spec\\.ts$",
	"transform": {
		"^.+\\.(t|j)s$": "ts-jest"
	},
	"collectCoverageFrom": ["src/**/*.(t|j)s"],
	"coverageDirectory": "./coverage",
	"testEnvironment": "node",
	"moduleNameMapper": {
		"^@/(.*)$": "<rootDir>/src/$1"
	},
	"testTimeout": 30000
}
