  id        String    @id @default(cuid())
  userId    String
  type      String    // ASSIGNMENT_DUE, GRADE_POSTED, QUIZ_AVAILABLE, ANNOUNCEMENT, DISCUSSION_REPLY, LIVE_SESSION
  title     String
  message   String
  link      String?
  metadata  String?   // JSON for additional data
  isRead    Boolean   @default(false)
  readAt    DateTime?
  createdAt DateTime  @default(now())

  // Relations
  user User @relation("UserNotifications", fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId, isRead])
  @@index([createdAt])
}

// Push Notification Subscriptions
model PushSubscription {
  id        String   @id @default(cuid())
  userId    String
  endpoint  String   @unique
  p256dhKey String
  authKey   String
  userAgent String?
  platform  String?
  isActive  Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  user User @relation("PushSubscriptions", fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([userId, isActive])
}

// ============================================
// Live Sessions (Video Conferencing)
// ============================================

model LiveSession {
  id               String    @id @default(cuid())
  hostId           String
  courseId         String?
  title            String
  description      String?
  sessionType      String    @default("LECTURE") // LECTURE, OFFICE_HOURS, STUDY_GROUP, WEBINAR
  roomId           String    @unique
  password         String?
  scheduledStart   DateTime
  scheduledEnd     DateTime?
  actualStart      DateTime?
  actualEnd        DateTime?
  maxParticipants  Int?
  isRecorded       Boolean   @default(false)
  recordingUrl     String?
  status           String    @default("SCHEDULED") // SCHEDULED, LIVE, ENDED, CANCELLED
  createdAt        DateTime  @default(now())
  updatedAt        DateTime  @updatedAt

  // Relations
  host         User                 @relation("SessionHost", fields: [hostId], references: [id])
  course       Course?              @relation("CourseSessions", fields: [courseId], references: [id], onDelete: SetNull)
  participants SessionParticipant[]

  @@index([hostId])
  @@index([courseId])
  @@index([scheduledStart])
  @@index([status])
}

model SessionParticipant {
  id         String    @id @default(cuid())
  sessionId  String
  userId     String
  role       String    @default("PARTICIPANT") // HOST, CO_HOST, PARTICIPANT, VIEWER
  joinedAt   DateTime  @default(now())
  leftAt     DateTime?
  isActive   Boolean   @default(true)
  audioEnabled Boolean @default(true)
  videoEnabled Boolean @default(true)

  // Relations
  session LiveSession @relation(fields: [sessionId], references: [id], onDelete: Cascade)
  user    User        @relation("SessionParticipations", fields: [userId], references: [id])

  @@unique([sessionId, userId])
  @@index([sessionId])
  @@index([userId])
}

// ============================================
// Analytics & Activity Tracking
// ============================================

model ActivityLog {
  id         String   @id @default(cuid())
  userId     String
  action     String   // CREATE, UPDATE, DELETE, VIEW, SUBMIT, GRADE, etc.
  entityType String   // COURSE, LESSON, QUIZ, ASSIGNMENT, etc.
  entityId   String?
  metadata   String?  // JSON for additional context
  ipAddress  String?
  userAgent  String?
  createdAt  DateTime @default(now())

  // Relations
  user User @relation("UserActivityLogs", fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([entityType, entityId])
  @@index([createdAt])
}

model LearningResourceStats {
  id               String   @id @default(cuid())
  userId           String   @unique
  lessonPlanCount  Int      @default(0)
  questionCount    Int      @default(0)
  activeQuizCount  Int      @default(0)
  examPaperCount   Int      @default(0)
  lastUpdated      DateTime @default(now())

  // Relations
  user User @relation("UserResourceStats", fields: [userId], references: [id], onDelete: Cascade)
}

// ============================================
// Discussion Post Upvotes (Prevent Duplicates)
// ============================================

model PostUpvote {
  id        String   @id @default(cuid())
  postId    String
  userId    String
  createdAt DateTime @default(now())

  // Relations
  post DiscussionPost @relation("PostUpvotes", fields: [postId], references: [id], onDelete: Cascade)
  user User           @relation("UserUpvotes", fields: [userId], references: [id], onDelete: Cascade)

  @@unique([postId, userId])
  @@index([postId])
  @@index([userId])
}

// ============================================
// Homepage Featured Content
// ============================================

model FeaturedCourse {
  id          String   @id @default(cuid())
  courseId    String
  displayOrder Int     @default(0)
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Relations
  course Course @relation("FeaturedCourses", fields: [courseId], references: [id], onDelete: Cascade)

