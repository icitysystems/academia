  status        String    @default("IN_PROGRESS") // IN_PROGRESS, SUBMITTED, TIMED_OUT, GRADED, TERMINATED
  startedAt     DateTime  @default(now())
  submittedAt   DateTime?
  timeSpent     Int? // seconds
  totalScore    Float?
  maxScore      Float?
  percentage    Float?
  grade         String? // A, B, C, etc.
