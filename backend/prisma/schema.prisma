}

model Testimonial {
  id        String   @id @default(cuid())
  name      String
  role      String
  content   String
  avatarUrl String?
  rating    Int      @default(5)
  isActive  Boolean  @default(true)
  displayOrder Int   @default(0)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([displayOrder])
}

model PlatformStats {
  id             String   @id @default(cuid())
  totalStudents  Int      @default(0)
  totalCourses   Int      @default(0)
  totalInstructors Int    @default(0)
  completionRate Float    @default(0)
  lastUpdated    DateTime @default(now())
}

// ============================================
// Lesson Plan Sharing
// ============================================

model SharedLessonPlan {
  id             String   @id @default(cuid())
  lessonId       String?
  schemeId       String?
  ownerId        String
  sharedWithId   String?  // Specific user or null for public
  sharedWithRole String?  // Role-based sharing: FACULTY, etc.
  permissions    String   @default("VIEW") // VIEW, EDIT, COPY
  message        String?
  isPublic       Boolean  @default(false)
  expiresAt      DateTime?
  accessCount    Int      @default(0)
  createdAt      DateTime @default(now())

  // Relations
  owner      User  @relation("OwnedSharedPlans", fields: [ownerId], references: [id], onDelete: Cascade)
  sharedWith User? @relation("ReceivedSharedPlans", fields: [sharedWithId], references: [id], onDelete: SetNull)

  @@index([ownerId])
  @@index([sharedWithId])
  @@index([isPublic])
}

// ============================================
// File Attachments (Generic for all resources)
// ============================================

model FileAttachment {
  id           String   @id @default(cuid())
  fileName     String
  originalName String
  fileUrl      String
  storagePath  String?
  mimeType     String
  fileSize     Int?     // in bytes
  checksum     String?  // MD5 for deduplication
  uploadedById String
  
  // Polymorphic relationship
  resourceType String   // lesson, course, assignment, discussion
  resourceId   String
  
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  @@index([uploadedById])
  @@index([resourceType, resourceId])
  @@index([checksum])
}

// ============================================
// SSO/SAML Configuration
// ============================================

model SSOConfiguration {
  id               String   @id @default(cuid())
  institutionId    String   @unique
  institutionName  String
  provider         String   @default("SAML") // SAML, OIDC
  entityId         String
  ssoUrl           String
  sloUrl           String?
  certificate      String   // PEM format
  nameIdFormat     String   @default("emailAddress")
  attributeMapping String?  // JSON: {email, firstName, lastName, role}
  isEnabled        Boolean  @default(true)
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt

  @@index([institutionId])
}

