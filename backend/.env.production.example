# Production Environment Configuration
# Copy this to .env and fill in the values

# Database (PostgreSQL for production)
DATABASE_URL="postgresql://username:password@host:5432/academia?schema=public"

# Server
PORT=3333
NODE_ENV=production

# JWT Authentication
JWT_SECRET="your-super-secret-jwt-key-at-least-64-chars-long-change-me-now"
JWT_EXPIRES_IN="7d"

# AWS Configuration
AWS_REGION="us-east-1"
AWS_S3_BUCKET="academia-assets-production"
AWS_ACCESS_KEY_ID=""
AWS_SECRET_ACCESS_KEY=""

# Storage Provider (local or s3)
STORAGE_PROVIDER="s3"

# Redis (optional for queue processing)
REDIS_HOST="localhost"
REDIS_PORT="6379"
REDIS_PASSWORD=""

# Security
CORS_ORIGINS="https://academia.icitysystems.org"
RATE_LIMIT_WINDOW_MS="60000"
RATE_LIMIT_MAX="100"

# GraphQL
GRAPHQL_PLAYGROUND="false"
GRAPHQL_INTROSPECTION="false"

# OCR
OCR_LANGUAGE="eng"
OCR_PROVIDER="tesseract"

# ML
ML_CONFIDENCE_THRESHOLD="0.7"
ML_MIN_TRAINING_SAMPLES="5"

# Email Configuration (AWS SES)
EMAIL_PROVIDER="ses"
EMAIL_FROM="academia@icitysystems.org"
EMAIL_FROM_NAME="Academia Platform"
EMAIL_REPLY_TO="academia@icitysystems.org"
AWS_SES_REGION="us-east-1"
